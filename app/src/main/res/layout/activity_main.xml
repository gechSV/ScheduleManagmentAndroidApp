<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOpenIntentAddAnEvent"
        android:layout_width="73dp"
        android:layout_height="66dp"
        android:layout_marginBottom="32dp"
        android:onClick="OpenIntentAddAnEvent"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    <com.google.android.material.bottomappbar.BottomAppBar-->
<!--        android:id="@+id/bar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="bottom"-->
<!--        app:fabAlignmentMode="end"-->
<!--        android:backgroundTint="@color/deep_orange_100"/>-->
<!--    app:layout_anchor="@id/bar"-->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/deep_orange_300"
        android:text="Actions"
        app:icon="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabSize="normal"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_schedule_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/deep_orange_300"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        app:srcCompat="@drawable/baseline_add_24"
        android:layout_gravity="bottom|end"
       />

    <TextView
        android:id="@+id/add_event_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/add_event"
        app:layout_constraintBottom_toBottomOf="@+id/add_schedule_event"
        app:layout_constraintEnd_toStartOf="@+id/add_schedule_event"
        app:layout_constraintTop_toTopOf="@+id/add_schedule_event" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/deep_orange_300"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/add_schedule_event"
        app:layout_constraintEnd_toEndOf="@+id/add_schedule_event"
        app:layout_constraintStart_toStartOf="@+id/add_schedule_event"
        app:srcCompat="@drawable/baseline_add_24" />

    <TextView
        android:id="@+id/add_test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Test ^_^"
        app:layout_constraintBottom_toBottomOf="@+id/add_test"
        app:layout_constraintEnd_toStartOf="@+id/add_test"
        app:layout_constraintTop_toTopOf="@+id/add_test" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>